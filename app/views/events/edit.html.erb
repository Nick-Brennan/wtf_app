<div id="forms">
  <div class="container">
  <h4>Edit New Event</h4>
    <div class="row">
      <div class="col-xs-10">
        <%= form_for(@event, url: "/users/#{current_user.id}/events/#{params[:id]}",:html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :title %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :content %>
            </div>
            <div class="col-sm-4">
              <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "Content" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :category %>
            </div>
            <div class="col-sm-4">
              <%= f.text_field :category, class: "form-control", placeholder: "Category", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :submit %>
            </div>
            <div class="col-sm-4">
            <%= f.submit "Submit", class: "btn btn-primary" %>
            <%= link_to "Cancel", :back, class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div><!--closes row-->
  </div><!--closes container-->
</div><!--closes forms-->
