<div class = "col-xs-10 col-xs-offset-1 space-top card" id="user_show">

  <section id="user_itin">

    <!-- beginning of profile section -->
    <div class="row">
      <div class = "col-sm-4 col-sm-offset-1 col-xs-offset-1">
        <div class = "row">
          <div class = "col-sm-8 col-sm-offset-2 col-xs-offset-1 col-xs-9">
            <% if @user.avatar %>
              <%= image_tag @user.avatar %>
            <% else %>
              <%= image_tag "userprofile.png" %>
            <% end %>
          </div>

        </div>
        <div class = "row">
          <h3><%= @user.firstname %> <%= @user.lastname %></h3>
        </div>
        <div class = "row">
          <h4><em><%= @user.username %></em></h4>
        </div>
        <div class = "row">
          Joined: <%= @user.created_at.strftime("%-m-%-d-%Y") %>
        </div>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "Delete Profile", user_registration_path, class: "btn btn-danger", method: :delete %>

      </div>
      <!-- end of profile section -->

      <!-- beginning of posts -->
      <%= link_to "close", root_path, class: "btn btn-secondary float-right" %>
      <div class = "col-sm-5 col-sm-offset-1 col-xs-offset-1">
        <div class="row">

          <h4> <%= @user.username %>'s Posts </h4>
          <hr />
          <div class="row">
            <%= link_to "Add", new_user_event_path(current_user), class: "btn btn-primary" %>
          </div>

          <!--********LOOP THROUGH USER POST****************-->
          <% @events.order("created_at desc").each do |event| %>
            <div class="row">
              <h4>Event Title: <%= event.title %></h4>
              <h5><b>Published: </b><%= time_ago_in_words(event.created_at).gsub('about', '') %> ago</h5>
              <h5>Event Content: <%= event.content %></h5>
              <%= link_to "Edit", edit_user_event_path(@user, event), class: "btn btn-primary" %>
              <%= link_to "Delete", user_event_path(@user, event), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
          <% end %>
          <div class="row text-center">
            <%= will_paginate @events,  renderer: BootstrapPagination::Rails %>
          </div>

        </div>
      </div>

    </div>
  </section>

</div>
