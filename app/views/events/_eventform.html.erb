<div class="row space-top">
  <%= f.label :title, class:"control-label" %>
</div>
<div class="row">
  <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
</div>

<div class="row space-top">
  <%= f.label :content, class:"control-label" %>
</div>
<div class="row">
  <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "Content" %>
</div>

<div class="row space-top">
  <%= f.label :category, class:"control-label" %>
</div>
<div class="row">
  <%= f.text_field :category, class: "form-control", placeholder: "Category", autofocus: true %>
</div>

<div class="row space-top">
  <%= f.submit "Submit", class: "btn btn-primary",  "onclick" => "initAutocomplete()" %>
  <%= link_to "Cancel", :back, class: "btn btn-default" %>
</div>
